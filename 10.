class Reader:
    def __init__(self, id, last_name, first_name, group, course):
        self.id = id
        self.last_name = last_name
        self.first_name = first_name
        self.group = group
        self.course = course
        self.books_on_loan = []
        self.books_returned = []

    def __str__(self):
        return f"ID: {self.id}\nПрізвище: {self.last_name}\nІм'я: {self.first_name}\nГрупа: {self.group}\nКурс: {self.course}\nКниги на руках: {self.books_on_loan}\nСтатистика книг: {self.books_returned}\n"

    def borrow_book(self, book):
        self.books_on_loan.append(book)

    def return_book(self, book):
        if book not in self.books_on_loan:
            print("Ви не брали цю книгу у борг")
        else:
            self.books_on_loan.remove(book)
            self.books_returned.append(book)

reader_info = {
    "id": 2,
    "last_name": "Гірчак",
    "first_name": "Владислав",
    "group": "ІПЗс-22-2",
    "course": 2
}

reader = Reader(**reader_info)

while True:
    print("\nМеню:")
    print("1. Карта читача")
    print("2. Взяти книгу")
    print("3. Повернути книгу")
    print("0. Вихід")

    choice = input("Виберіть опцію: ")

    if choice == "1":
        print(reader)

    elif choice == "2":
        book = input("Введіть назву книги: ")
        reader.borrow_book(book)
        print(f"Ви взяли книгу '{book}' у користування")

    elif choice == "3":
        if not reader.books_on_loan:
            print("Ви не маєте книг у боргу")
        else:
            print("Книги у боргу:", reader.books_on_loan)
            book_to_return = input("Введіть назву книги, яку хочете повернути: ")
            reader.return_book(book_to_return)

    elif choice == "0":
        print("Завершення програми")
        break

    else:
        print("Невідома опція. Будь ласка, виберіть іншу опцію.")
